<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.maven.core.dao.OrderDao">
    <resultMap type="Order" id="OrderResult">
        <result property="orderId" column="order_id"/>
        <result property="uid" column="uid"/>
        <result property="pid" column="pid"/>
        <result property="count" column="count"/>
        <result property="totlePrice" column="totle_price"/>

    </resultMap>
    <insert id="insertOrder" parameterType="Order">
        insert into `order`(uid,pid,count,totle_price) values (#{uid},#{pid},#{count},#{totlePrice});
    </insert>
    <update id="updateOrder" parameterType="Order">
        update `order` set count = #{count} , totle_price=#{totlePrice} where order_id = #{orderId};
    </update>
    <update id="buyProduct" parameterType="string">
        update `order` set is_buy = 1 where order_id = #{_parmeter};
    </update>
    <delete id="deleteOrderById" parameterType="string">
        delete from `order` where order_id=#{_parmeter}
    </delete>
    <select id="listOrders" resultMap="OrderResult" parameterType="map">
        select order_id,uid,pid,count,totle_price from `order`
        <where>
            is_buy = 0
            <if test="uid!=null and uid !='' ">
                and uid = #{uid}
            </if>
            <if test="pid!=null and pid !='' ">
                and pid = #{pid}
            </if>
            ORDER BY order_id desc
            <if test="start!=null and size!=null">
                limit #{start},#{size}
            </if>
        </where>
    </select>


</mapper>